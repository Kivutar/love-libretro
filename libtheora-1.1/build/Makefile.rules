TARGET = $(CORE_DIR)/../libs/libtheora.$(TARGET_PLATFORM).a

DEFINES  +=
CFLAGS   += -Wall
CXXFLAGS += -Wall
LDFLAGS  +=

OBJS = $(SOURCES_C:.c=$(OBJEXT)) $(SOURCES_CXX:.cpp=$(OBJEXT)) $(SOURCES_S:.s=$(OBJEXT))

%$(OBJEXT): %.cpp
	$(CXX) -c -o $@ $< $(CXXFLAGS) $(DEFINES) $(INCLUDES)

%$(OBJEXT): %.c
	$(CC) -c -o $@ $< $(CFLAGS) $(DEFINES) $(INCLUDES)

%$(OBJEXT): %.s
	$(AS) -c -o $@ $<

all: $(TARGET)

$(TARGET): $(OBJS)
	$(AR) rcs $@ $(OBJS)

clean-objs:
	rm -f $(OBJS)

clean: clean-objs
	rm -f $(TARGET)

.PHONY: clean-objs clean FORCE
